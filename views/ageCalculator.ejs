<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Age Calculator</title>
    <style>
        /* Body styling for better appearance */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #83a4d4, #b6fbff);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
    
        /* Main container for the calculator */
        .age-calculator {
            background: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
            text-align: center;
            width: 350px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
    
        .age-calculator:hover {
            transform: scale(1.02);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }
    
        /* Header styling */
        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 25px;
        }
    
        /* Label styling */
        label {
            font-size: 16px;
            color: #555;
            font-weight: 500;
        }
    
        /* Input field styling */
        input {
            width: 100%;
            padding: 12px;
            margin-top: 12px;
            margin-bottom: 20px;
            border: 2px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }
    
        input:focus {
            outline: none;
            border-color: #008cba;
            box-shadow: 0 0 5px rgba(0, 140, 186, 0.4);
        }
    
        /* Button styling */
        button {
            background: linear-gradient(90deg, #008cba, #00c6ff);
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
        }
    
        button:hover {
            background: linear-gradient(90deg, #005f75, #00aaff);
            transform: translateY(-2px);
        }
    
        /* Result display styling */
        #result {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            color: #333;
            background: rgba(0, 140, 186, 0.1);
            padding: 15px;
            border-radius: 10px;
        }
    </style>
    
</head>
<body>
    <div class="age-calculator">
        <h1>Age Calculator</h1>
        <form id="ageForm">
            <label for="dob">Enter Your Date of Birth:</label>
            <input type="date" id="dob" name="dob" required>
            <button type="button" id="calculateAge">Calculate Age</button>
        </form>
        <div id="result"></div>
    </div>
    <script>
        document.getElementById("calculateAge").addEventListener("click", function () {
            const dobInput = document.getElementById("dob").value;
            const result = document.getElementById("result");
        
            if (!dobInput) {
                result.textContent = "Please enter a valid date of birth.";
                return;
            }
        
            const dob = new Date(dobInput);
            const today = new Date();

            const diffInMilliseconds = today - dob;

            const years = Math.floor(diffInMilliseconds / (1000 * 60 * 60 * 24 * 365.25));
            const months = Math.floor((diffInMilliseconds % (1000 * 60 * 60 * 24 * 365.25)) / (1000 * 60 * 60 * 24 * 30.44));
            const days = Math.floor((diffInMilliseconds % (1000 * 60 * 60 * 24 * 30.44)) / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diffInMilliseconds % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diffInMilliseconds % (1000 * 60 * 60)) / (1000 * 60));

            result.textContent = `You are ${years} years, ${months} months, ${days} days, ${hours} hours, and ${minutes} minutes old.`;
        });
    </script>
</body>
</html>
