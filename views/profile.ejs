<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Profile</h1>

    <!-- Form to Update Username -->
    <form action="/update-username" method="POST">
        <div>
            <label for="username">Change Username:</label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                placeholder="Enter new username" 
                value="<%= user?.displayName || '' %>"
            >
        </div>
        <button type="submit">Update Username</button>
    </form>

    <!-- Form to Update Password -->
    <form action="/update-password" method="POST">
        <div>
            <label for="currentPassword">Current Password:</label>
            <input 
                type="password" 
                id="currentPassword" 
                name="currentPassword" 
                placeholder="Enter current password" 
                required
            >
        </div>

        <div>
            <label for="newPassword">New Password:</label>
            <input 
                type="password" 
                id="newPassword" 
                name="newPassword" 
                placeholder="Enter new password"
            >
        </div>
        <button type="submit">Update Password</button>
    </form>

    <!-- Form to Update Birth Date -->
    <form action="/update-birthdate" method="POST">
        <div>
            <label for="birthDate">Birth Date:</label>
            <input 
            type="date" 
            id="birthDate" 
            name="birthDate" 
            value="<%= user?.birthDate ? new Date(user.birthDate).toISOString().split('T')[0] : '' %>"
        >
        
        </div>
        <button type="submit">Update Birth Date</button>
    </form>

    <!-- Math Test Scoreboard -->
    <section>
        <h2>Math Test Scoreboard</h2>
        <% if (user?.mathScores && user.mathScores.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Test #</th>
                        <th>Difficulty</th>
                        <th>Score</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.mathScores.forEach((test, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= test.difficulty %></td>
                            <td><%= test.score %></td>
                            <td><%= new Date(test.date).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No math test scores available yet.</p>
        <% } %>
    </section>

    <a href="/home">Back to Home</a>
</body>
</html>
