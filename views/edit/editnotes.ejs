<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Note</title>
</head>
<body>
    <h1>Edit Note</h1>

    <form action="/editnotes/<%= note._id %>" method="POST">
        <label for="heading">Heading:</label>
        <input type="text" id="heading" name="heading" value="<%= note.heading %>" required><br>

        <label for="points">Points:</label>
        <% note.points.forEach((point, index) => { %>
            <div>
                <input type="text" name="points[]" value="<%= point %>" required>
                <label for="explain">Explanation:</label>
                <input type="text" name="explain[]" value="<%= note.explain[index] %>" required>
            </div>
        <% }); %>

        <button type="submit">Update Note</button>
    </form>

    <a href="/notes">Back to Notes</a>
</body>
</html>
