<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Login Page</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #111;
            font-family: Arial, sans-serif;
            color: #fff;
        }

        #sun {
            position: absolute;
            width: 20em;
            height: 20em;
            top: -10em;
            left: -10em;
            background: #ffffff;
            border-radius: 50%;
            animation: flow 10s infinite alternate;
            z-index: 1000;
        }

        @keyframes flow {
            0% {
                box-shadow: 0 0 50px #fffc01, 0 0 150px #ffad01;
            }

            25% {
                box-shadow: 0 0 50px #fffc01, 0 0 200px #ffad01;
            }

            50% {
                box-shadow: 0 0 100px #fffc01, 0 0 300px #ffad01;
            }

            75% {
                box-shadow: 0 0 50px #fffc01, 0 0 200px #ffad01;
            }

            100% {
                box-shadow: 0 0 20px #fffc01, 0 0 150px #ffad01;
            }
        }

        form {
            background: #222;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
            max-width: 400px;
            margin: 100px auto;
        }

        form h1 {
            margin-bottom: 20px;
            text-align: center;
        }

        label {
            display: block;
            margin: 10px 0 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 4px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #ffad01;
            border: none;
            border-radius: 4px;
            color: #111;
            font-weight: bold;
            cursor: pointer;
        }

        button:hover {
            background-color: #fffc01;
        }

        #forgot-password-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #222;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            z-index: 2000;
        }

        #forgot-password-modal h2 {
            margin-top: 0;
        }

        .links {
            margin-top: 10px;
            text-align: center;
        }

        .links a {
            color: #ffad01;
            text-decoration: none;
        }

        .links a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div>
        <h1>Login</h1>
        <form action="/login" method="POST">
            <div>
                <label for="identifier">Email or Username:</label>
                <input 
                    type="text" 
                    id="identifier" 
                    name="identifier" 
                    placeholder="Enter your email or username" 
                    required
                >
            </div>
            <div>
                <label for="password">Password:</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Enter your password" 
                    required
                >
            </div>
            <button type="submit">Login</button>
        </form>
        
    </div>

    <div id="forgot-password-modal">
        <h2>Forgot Password</h2>
        <form action="/forgot-password" method="POST">
            <label for="forgot-email">Email:</label>
            <input type="email" id="forgot-email" name="email" required>
            <button type="submit">Send Reset Password</button>
        </form>
        <button onclick="closeForgotPassword()">Close</button>
    </div>

    <script>
        function showForgotPassword() {
            document.getElementById('forgot-password-modal').style.display = 'block';
        }

        function closeForgotPassword() {
            document.getElementById('forgot-password-modal').style.display = 'none';
        }

        // Create the animated sun and stars
        const sun = document.createElement("div");
        sun.id = "sun";
        document.body.appendChild(sun);

        for (let i = 0; i < 200; i++) {
            const size = Math.round(Math.random() * 3);
            const star = document.createElement("div");
            star.style.position = 'absolute';
            star.style.backgroundColor = '#ffffff';
            star.style.width = star.style.height = `${size}px`;
            star.style.borderRadius = `${size / 2}px`;
            star.style.boxShadow = `0px 0px ${Math.random() * 30}px #ffffff`;
            star.style.top = `${Math.random() * window.innerHeight}px`;
            star.style.left = `${Math.random() * window.innerWidth}px`;
            document.body.appendChild(star);
        }
    </script>
</body>

</html>
